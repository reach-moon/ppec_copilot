# .env.docker - Environment variables for Docker deployment

# --- 应用基础配置 ---
APP_ENV="production"
PROJECT_NAME="PPEC Copilot"
API_V1_PREFIX="/api/v1"

# --- 日志配置 ---
LOG_LEVEL="INFO"

# --- LLM 服务 (one-api) 配置 ---
ONE_API_BASE_URL="http://oneapi:8000/v1"
ONE_API_KEY="sk-placeholder-key"
ONE_API_MODEL="Qwen/Qwen2.5-7B-Instruct"

ONE_API_EMBEDDING_KEY="sk-placeholder-key"
ONE_API_EMBEDDING_MODEL="text-embedding-3-small"
ONE_API_EMBEDDING_DIMS=1536

# --- Mem0 记忆服务配置 ---
MEM_0_VECTOR_STORE_PROVIDER="qdrant"
MEM_0_VECTOR_STORE_HOST="qdrant"
MEM_0_VECTOR_STORE_PORT=6333

GRAPH_STORE="neo4j"
GRAPH_STORE_URL="neo4j://neo4j:7687"
GRAPH_STORE_USER="neo4j"
GRAPH_STORE_PASSWORD="neo4j_password"

# --- RAGFlow 服务配置 ---
RAGFLOW_API_URL="http://ragflow:1080/api/v1"
RAGFLOW_API_KEY="ragflow-placeholder-key"